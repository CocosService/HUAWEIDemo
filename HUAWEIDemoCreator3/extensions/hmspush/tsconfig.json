{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./source",
    "sourceMap": false,
    "lib": [
      "dom",
      "es7"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ]
  },
  "exclude": [
    "./dist",
  ],
  "include": [
    "./source"
  ]
}